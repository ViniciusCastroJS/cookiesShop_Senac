<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cookie_Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="container-fluid p-0 m-0">
        <div class="col-sm-12 background">
            <div class="row">
                <nav class="col-sm-12 menu">
                    <h1 class="p-3">Cookies Shop</h1>
                </nav>
            </div>
        </div>
        <div class="container-fluid p-0 m-0">
            <ul class="nav bg-dark">
                <li class="nav-item text-black">
                    <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Cookies</a>
                </li>
                <li class="nav-item">
                    <div class="barra"></div>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-route-user="2" asp-controller="Home" asp-action="Carrinho">Carrinho</a>
                </li>
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
